extends layout

   
block content
   head
    script(defer src="../javascripts/fetch.js") 
    link(rel="stylesheet", href="../stylesheets/crud.css")
 

   body.electrician
    form(method='post' action='/logout').logoutForm
     button(name="service" value='logout').chooseWorker Wyloguj
    #nav  
    
     form(method='post')#cont 
      p Zmień kategorie CRUD
      button(name="service" value="plumber").chooseWorker#plumber Hydraulik
      button(name="service" value="electrician").chooseWorker#electrician Elektryk
      button(name="service" value="gardener").chooseWorker#gardener Ogrodnik
      button(name="service" value="books").chooseWorker#books Rezerwacje
      
       
    img(src='../images/p2.png')
    h1 CRUD Books
    #edit.popup.hidden
     p Edytuj Usługę
     input(type='text' placeholder="Podaj nazwe uslugi" class="inputs" value id="editName")
     input(type="number" placeholder="Podaj cene uslugi" class='inputs' value id="editPrice")
     input(type="datetime-local" name="date")
     button(id="editConfirm").confirmBtn Edytuj

    

    table.booksTable
     each item in data
      tr 
       td='Wyk. '+ item.person 
       td='Im. '+ item.username 
       td='E-m. '+ item.email 
       td='Adr: ' + item.address
       td=item.date 
       td=item.price+'zł'
       td='Info' + item.info
       td 
        button(class='delete crudButton', data-person="books" value=item._id) Usuń 
       td 
        button( class='crudButton edit', data-person="books" value=item._id) Edytuj 
